{{$app := env "APP_NAME"}}

upstream {{printf $app}} {
  least_conn;
  {{range service $app}}
  server {{.Address}}:{{.Port}} max_fails=3 fail_timeout=60 weight=1;{{end}}
}

server {
  listen 80 default;
  charset utf-8;

  location /static {
      alias /usr/src/app/static;
  }

  location / {
      proxy_pass http://{{printf $app}}:8000;
      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
  }
}
